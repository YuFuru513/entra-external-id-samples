@model dynamic

<div class="container mt-4">
    <h2>ログイン成功！</h2>
    
    <!-- 基本ユーザー情報 -->
    <div class="card mb-4">
        <div class="card-header">
            <h4>基本ユーザー情報</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <td><strong>認証状態</strong></td>
                    <td>@Model.IsAuthenticated</td>
                </tr>
                <tr>
                    <td><strong>ユーザー名</strong></td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td><strong>表示名</strong></td>
                    <td>@Model.DisplayName</td>
                </tr>
                <tr>
                    <td><strong>メールアドレス</strong></td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td><strong>ユーザーID</strong></td>
                    <td>@Model.UserId</td>
                </tr>
                <tr>
                    <td><strong>国</strong></td>
                    <td>@Model.Country</td>
                </tr>
                <tr>
                    <td><strong>都道府県</strong></td>
                    <td>@Model.State</td>
                </tr>
                <tr>
                    <td><strong>認証方式</strong></td>
                    <td>@Model.AuthenticationType</td>
                </tr>
            </table>
        </div>
    </div>

    <!-- 全クレーム情報 -->
    <div class="card">
        <div class="card-header">
            <h4>トークンクレーム情報（詳細）</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>クレームタイプ</th>
                            <th>値</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.Claims)
                        {
                            <tr>
                                <td><code>@claim.Type</code></td>
                                <td>
                                    @if (claim.Type.Contains("extension_") && claim.Type.Contains("customAttribute"))
                                    {
                                        <span class="badge bg-info">カスタム属性</span>
                                    }
                                    @claim.Value
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table td:first-child {
        width: 200px;
        background-color: #f8f9fa;
        font-weight: 500;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    code {
        font-size: 0.875em;
        color: #e83e8c;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .table-responsive {
        max-height: 500px;
        overflow-y: auto;
    }
</style>